- themeQs = theme ? '?theme=' + theme : ''
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    a.navbar-brand(href='/' + themeQs)
        include /assets/img/bootstrapcdn.svg
        | BootstrapCDN

    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#main-nav', aria-controls='main-nav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon

    #main-nav.navbar-collapse.collapse
        ul.nav.navbar-nav.ml-lg-5
            li(class='nav-item' + (title === 'Font Awesome' ? ' active' : ''))
                a.nav-link(href='/fontawesome/' + themeQs) Font Awesome
            li(class='nav-item' + (title === 'Bootswatch' ? ' active' : ''))
                a.nav-link(href='/bootswatch/' + themeQs) Bootswatch
            li(class='nav-item' + (title === 'Bootlint' ? ' active' : ''))
                a.nav-link(href='/bootlint/' + themeQs) Bootlint
            li(class='nav-item' + (title === 'Bootstrap Legacy' ? ' active' : ''))
                a.nav-link(href='/legacy/' + themeQs) Legacy
            li.nav-item.dropdown
                a#navbarDropdown1.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') 4 Beta
                ul.dropdown-menu(aria-labelledby='navbarDropdown1')
                    li.dropdown-item
                        a(href='/beta/',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='Bootstrap Beta 4') Bootstrap
                    li.dropdown-item
                        a(href='/bootswatch4/',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='Bootswatch Beta 4') Bootswatch
        ul.nav.navbar-nav.ml-auto
            li(class='nav-item' + (title === 'Showcase' ? ' active' : ''))
                a.nav-link(href='/showcase/' + themeQs) Showcase
            li(class='nav-item' + (title === 'Integrations' ? ' active' : ''))
                a.nav-link(href='/integrations/' + themeQs) Integrations
            li.dropdown
                a#navbarDropdownRight.nav-dropdown.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Resources
                ul.dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownRight')
                    li.dropdown-item
                        a(href='https://github.com/MaxCDN/bootstrap-cdn',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='GitHub project',
                            target='_blank',
                            rel='noopener') GitHub project
                    li.dropdown-item
                        a(href='https://wordpress.org/plugins/bootstrapcdn/',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='WordPress Plugin',
                            target='_blank',
                            rel='noopener') WordPress Plugin
                    li.dropdown-item
                        a(href='http://getbootstrap.com/',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='Bootstrap',
                            target='_blank',
                            rel='noopener') Bootstrap
                    li.dropdown-item
                        a(href='http://expo.getbootstrap.com/',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='Expo',
                            target='_blank',
                            rel='noopener') Bootstrap Expo
                    li.dropdown-item
                        a(href='http://fontawesome.io/',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='Font Awesome',
                            target='_blank',
                            rel='noopener') Font Awesome
                    li.dropdown-item
                        a(href='http://bootswatch.com/',
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='Bootswatch',
                            target='_blank',
                            rel='noopener') Bootswatch
                    li.dropdown-item
                        a(href='https://github.com/twbs/bootlint'
                            data-ga-category='Navigation',
                            data-ga-action='Resources',
                            data-ga-label='Bootlint',
                            target='_blank',
                            rel='noopener') Bootlint
                    li.dropdown-item
                        a(href='https://glyphicons.com/',
