footer.border-top.bg-white.mt-auto
    .container-fluid.d-flex.justify-content-between.footer-container
        .d-flex.align-items-center.footer-logo
            a(href='https://www.jsdelivr.com/', rel='noopener', target='_blank')
                //- include /assets/img/jsdelivr_footer_logo.svg

        .d-flex.justify-items-center.flex-column.mr-auto.align-content-start
            div
                | Powered by
                |
                a.text-decoration-none(href='https://jsdelivr.com')
                    | jsDelivr
            div
                | and sponsored by
                |
                each friend, index in config.app.friends
                    if (index === config.app.friends.length - 1)
                        |  &amp;
                        |
                    else if (index > 0)
                        | ,
                        |
                    a.text-decoration-none.custom-link(href=friend.url, rel=`noopener${friend.nofollow !== false ? " nofollow" : ""}`, target='_blank')=friend.name

        .d-flex.align-items-center.about-policy
            a.mr-5.text-decoration-none.custom-link(href='/about/')
                | About
            a.text-decoration-none.custom-link(href='https://www.jsdelivr.com/terms/privacy-policy-jsdelivr-net', rel='noopener', target='_blank')
                | Privacy Policy

