#quickstart.tab-pane.active
    h2 Quickstart
    center.well
        - var name = 'quickstartCSS'
        - var cssPath = config.bootstrap[0].css_complete
        .label-container
            h3 Complete CSS
        .input-group.input-group-lg
            input.form-control(value=cssPath)
            .input-group-btn
                button.btn.btn-lg(type="button", onclick="toggleCode(this,'"+name+"')")
                    b.icon-caret-down
        include csscode

        - var name = 'quickstartJS'
        - var jsPath = config.bootstrap[0].javascript
        .label-container
            h3 Complete JavaScript
        .input-group.input-group-lg
            input.form-control(value=jsPath)
            .input-group-btn
                button.btn.btn-lg(type="button", onclick="toggleCode(this,'"+name+"')")
                    b.icon-caret-down
        include jscode
    br
